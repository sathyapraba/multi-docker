{
	"AWSEBDockerrunVersion" : 2,
        "containerDefinitions" : [
		{
		  "name" : "client",
                  "image" : "sathyapraba/multi-client",
                  "hostname" : "client",
                  "essential" : false
                },
        
		{
		  "name" : "server",
                  "image" : "sathyapraba/multi-server",
                  "hostname" : "api",
                  "essential" : false
                },

		{
		  "name" : "worker",
                  "image" : "sathyapraba/multi-worker",
                  "hostname" : "worker",
                  "essential" : false
                },

		{
		  "name" : "nginx",
                  "image" : "sathyapraba/multi-nginx",
                  "hostname" : "nginx",
                  "essential" : true,
                  "portMappings" : [
                     {
                       "hostPort" : 80,
                       "containerPort" : 80
                     }
                   ],
                  "links" : ["client","server"]
                }
         ]

}
